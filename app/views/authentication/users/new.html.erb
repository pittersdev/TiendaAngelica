<%= form_with(model: @user) do |form| %>
<% @user.errors.full_messages.each do |error| %> <div style="color: red">
    <div>
        <p style="color:red"> <%= error %></p>
    </div>
<% end %>
    <section class="text-gray-600 body-font">
        <div class="container px-5 py-24 mx-auto flex flex-wrap items-center">
        <div class="lg:w-3/5 md:w-1/2 md:pr-16 lg:pr-0 pr-0">
            <h1 class="title-font font-medium text-3xl text-gray-900">Crea tu cuenta  en la E-commerce  mas grande de Venezuela</h1>
            <p class="leading-relaxed mt-4">Podras vender todos los productos nuevos y usados que tu desees, odras vender todos los productos nuevos y usados que tu desees .</p>
        </div>
        <div class="lg:w-2/6 md:w-1/2 bg-gray-100 rounded-lg p-8 flex flex-col md:ml-auto w-full mt-10 md:mt-0">
            <h2 class="text-gray-900 text-lg font-medium title-font mb-5">Registrate ahora</h2>
            <div class="relative mb-4">
            <label for="full-name" class="leading-7 text-sm text-gray-600">Correo Electronico</label>
            <%= form.email_field :email, required: true, class:'w-full bg-white rounded border border-gray-300 focus:border-blue-500 focus:ring-2 focus:ring-blue-200 text-base outline-none text-gray-700 py-1 px-3 leading-8 transition-colors duration-200 ease-in-out' %>
            </div>
            <div class="relative mb-4">
                <label for="full-name" class="leading-7 text-sm text-gray-600">Nombre de usuario</label>
                <%= form.text_field :username, required: true, class:'w-full bg-white rounded border border-gray-300 focus:border-blue-500 focus:ring-2 focus:ring-blue-200 text-base outline-none text-gray-700 py-1 px-3 leading-8 transition-colors duration-200 ease-in-out' %>
                </div>
            <div class="relative mb-4">
            <label for="email" class="leading-7 text-sm text-gray-600">Contrase√±a</label>
            <%= form.password_field :password, required: true, class:'w-full bg-white rounded border border-gray-300 focus:border-blue-500 focus:ring-2 focus:ring-blue-200 text-base outline-none text-gray-700 py-1 px-3 leading-8 transition-colors duration-200 ease-in-out' %>
            </div>
            <button class="text-white bg-blue-500 border-0 py-2 px-8 focus:outline-none hover:bg-blue-600 rounded text-lg"><%= form.submit :Registrarse %></button>
            
            <p class="text-xs text-gray-500 mt-3">Disfruta de un mundo lleno de sorpresas.</p>
        </div>
        </div>
    </section>
<% end %>