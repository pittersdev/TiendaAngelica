<div class=" w-full max-w-8xl bg-white" data-controller="menu">
    <div  class="flex flex-col max-w-screen-xl p-5 mx-auto md:items-center md:justify-between md:flex-row md:px-6 lg:px-0">
        <div class="flex flex-row items-center justify-between lg:justify-start">
            <%= link_to products_path do %>
            <p  class="text-lg font-bold tracking-tighter text-blue-600 transition duration-500 ease-in-out transform tracking-relaxed lg:pr-8"> Vende De Todo </p>
            <% end %>
            <button class="rounded-lg sm:hidden focus:outline-none focus:shadow-outline" data-action="click->menu#toggle" >
                <%= image_tag 'icons/menu.svg',width: 35, height: 35 %>
            </button>
        </div>

    
            <nav class="flex-col items-center flex-grow hidden pb-4 border-blue-600 md:pb-0 md:flex md:justify-end md:flex-row lg:border-l-2 lg:pl-2" >
                <%= render partial: 'partials/items' %>
            </nav>
            <div class="gap-4 sm:hidden absolute bg-white top-0 right-0 shadow z-10 h-full flex flex-col min-w-[45%] overflow-y-scroll ease-in-out duration-200 p-5 translate-x-full" data-menu-target="items">
                <button class="mb-4" data-action="click->menu#toggle"><%= image_tag 'icons/close.svg', width: 35, height: 35 %></button>
                <%= render partial: 'partials/items' %>
            </div>
    </div> 
</div>
